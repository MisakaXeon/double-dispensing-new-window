<Window x:Class="dispensing.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:dispensing"
        mc:Ignorable="d"
        xmlns:customs="clr-namespace:dispensing.CustomControls"
        xmlns:gif="clr-namespace:GifImageLib;assembly=GifImageLib"
        Title="MainWindow" WindowStyle="None" WindowState="Maximized">
    <!--Height="1920" Width="1080"-->
    <Grid>
        <ContentControl x:Name="PageContent">
            <ContentControl.Content>
                <customs:TakeMedicinePage></customs:TakeMedicinePage>
            </ContentControl.Content>
        </ContentControl>
        <customs:FullKeyboardControl  Grid.Row="1" VerticalAlignment="Bottom" Visibility="Collapsed" x:Name="KeyboardControl"></customs:FullKeyboardControl>
    </Grid>
</Window>
